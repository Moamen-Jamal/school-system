@using ViewModels
@model StudentEditViewModel

<div class="app-inner-layout__header-boxed p-0">
    <div class="app-inner-layout__header page-title-icon-rounded text-white bg-vicious-stance mb-4">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon"><i class=" pe-7s-plugin icon-gradient bg-malibu-beach"></i></div>
                    <div>
                        Add Student
                        <div class="page-title-subheading">PLease Fill the Fields below to create a new  record </div>
                    </div>
                </div>
                <div class="page-title-actions">
                    <a href="students.html" data-toggle="tooltip" title="Go Back" data-placement="bottom"
                       class="btn-shadow mr-3 btn btn-dark">
                        <i class="fa fa-angle-left"></i>
                    </a>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="main-card mb-3 card">
            <div class="card-body">
                <h5 class="card-title">Add Record </h5>

                @using (Html.BeginForm("Add", "ClassRoom", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-4">
                            <div class="position-relative form-group">
                                <label for="name" class="">Full Name</label>
                                @Html.TextBoxFor(i => i.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(i => i.Name)
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="position-relative form-group">
                                <label for="Phone" class="">Phone</label>
                                @Html.TextBoxFor(i => i.Phone, new { @class = "form-control" })
                                @Html.ValidationMessageFor(i => i.Phone)
                            </div>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-4">
                            <div class="position-relative form-group">
                                <label for="email" class="">E-mail</label>
                                @Html.TextBoxFor(i => i.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(i => i.Email)
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="position-relative form-group">
                                <label for="name" class="">  class</label>
                                @*<select class="form-control  " id=" " name=" ">
                                    <option value="">Select Class</option>
                                    <option value="1">class</option>
                                    <option value="2">class</option>
                                    <option value="3">class</option>
                                    <option value="4">class</option>
                                </select>*@
                                @Html.DropDownListFor(i => i.ClassID, new SelectList(ViewBag.Classes, "ID", "Name"), new { @class = "form-control" })
                            </div>
                        </div>

                    </div>



                    <button class="btn-hover-shine btn btn-info btn-lg">Save</button>
                }
                </div>
        </div>
    </div>
</div>


